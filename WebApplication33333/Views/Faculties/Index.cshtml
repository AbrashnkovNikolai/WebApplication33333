@model IEnumerable<WebApplication33333.Faculty>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Добавить запись</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Idгруппы
            </th>
            <th>
                группа
            </th>
            <th>
                Название факультета
            </th>
            <th>
                год постпуления
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupId)
                </td>
            <td>
                    @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Faculty1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfAdmission)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GroupId">Редактировать</a> |
                <a asp-action="Delete" asp-route-id="@item.GroupId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
</table>
